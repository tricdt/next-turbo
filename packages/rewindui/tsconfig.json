{
   "extends": "@repo/typescript-config/react-library.json",
   "display": "Default",
   "compilerOptions": {
      "jsx": "react-jsx",
      "lib": ["dom", "ES2015"],
      "module": "ESNext",
      "target": "es6",
      "rootDir": "src",
      "outDir": "dist",
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true,
      "paths": {
         "@components/*": ["./src/components/*"],
         "@icons/*": ["./src/icons/*"],
         "@theme/*": ["./src/theme/*"],
         "@utils/*": ["./src/utils/*"],
         "@hooks/*": ["./src/hooks/*"],
         "@types": ["./src/types"],
         "@animations/*": ["./src/animations/*"],
         "@helpers/*": ["./src/helpers/*"]
      }
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist"]
}
