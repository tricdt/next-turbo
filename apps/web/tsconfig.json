{
   "extends": "@repo/typescript-config/nextjs.json",
   "compilerOptions": {
      "plugins": [
         {
            "name": "next"
         }
      ],

      "paths": {
         "@components/*": ["./src/components/*"],
         "@icons/*": ["./src/icons/*"],
         "@theme/*": ["./src/theme/*"],
         "@utils/*": ["./src/utils/*"],
         "@hooks/*": ["./src/hooks/*"],
         "@types": ["./src/types"],
         "@animations/*": ["./src/animations/*"],
         "@helpers/*": ["./src/helpers/*"]
      }
   },
   "include": [
      "next-env.d.ts",
      "next.config.js",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
   ],
   "exclude": ["node_modules"]
}
